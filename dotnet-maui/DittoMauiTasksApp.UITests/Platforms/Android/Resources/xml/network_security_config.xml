<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for testing environments -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <!-- BrowserStack local testing -->
        <domain includeSubdomains="true">bs-local.com</domain>
        <!-- Ditto Cloud endpoints -->
        <domain includeSubdomains="true">cloud.ditto.live</domain>
        <domain includeSubdomains="true">api.ditto.live</domain>
    </domain-config>
    
    <!-- Base configuration for production endpoints -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>
            <!-- Trust user added CAs for testing -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>